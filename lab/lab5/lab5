<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>OpenLayers Map Switcher</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/ol@v9.2.4/ol.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }
    #map {
      width: 100%;
      height: 90vh;
    }
    .controls {
      position: absolute;
      top: 10px;
      left: 10px;
      background: white;
      padding: 10px;
      border-radius: 8px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.3);
      z-index: 1000;
    }
  </style>
</head>
<body>
  <div class="controls">
    <h4>Basemap:</h4>
    <label><input type="radio" name="basemap" value="osm" checked> OSM</label><br>
    <label><input type="radio" name="basemap" value="esri"> ESRI Imagery</label>
    <hr>
    <label><input type="checkbox" id="wmsToggle" checked> Show WMS Layer</label>
  </div>

  <div id="map"></div>

  <script type="module">
    import Map from "https://cdn.jsdelivr.net/npm/ol@v9.2.4/Map.js";
    import View from "https://cdn.jsdelivr.net/npm/ol@v9.2.4/View.js";
    import TileLayer from "https://cdn.jsdelivr.net/npm/ol@v9.2.4/layer/Tile.js";
    import OSM from "https://cdn.jsdelivr.net/npm/ol@v9.2.4/source/OSM.js";
    import XYZ from "https://cdn.jsdelivr.net/npm/ol@v9.2.4/source/XYZ.js";
    import TileWMS from "https://cdn.jsdelivr.net/npm/ol@v9.2.4/source/TileWMS.js";
    import { fromLonLat } from "https://cdn.jsdelivr.net/npm/ol@v9.2.4/proj.js";

    // Base layers
    const osmLayer = new TileLayer({
      source: new OSM(),
      visible: true
    });

    const esriLayer = new TileLayer({
      source: new XYZ({
        url: "https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}"
      }),
      visible: false
    });

    // WMS layer
    const wmsLayer = new TileLayer({
      source: new TileWMS({
        url: "https://ahocevar.com/geoserver/wms",
        params: {
          LAYERS: "topp:states",
          TILED: true,
          FORMAT: "image/png"
        },
        serverType: "geoserver",
        crossOrigin: "anonymous"
      }),
      visible: true
    });

    // Map
    const map = new Map({
      target: "map",
      layers: [osmLayer, esriLayer, wmsLayer],
      view: new View({
        center: fromLonLat([-98.583, 39.833]), // continental US
        zoom: 4
      })
    });

    // Switch basemap
    document.querySelectorAll('input[name="basemap"]').forEach(radio => {
      radio.addEventListener("change", () => {
        osmLayer.setVisible(radio.value === "osm");
        esriLayer.setVisible(radio.value === "esri");
      });
    });

    // Toggle WMS layer
    document.getElementById("wmsToggle").addEventListener("change", e => {
      wmsLayer.setVisible(e.target.checked);
    });
  </script>
</body>
</html>
